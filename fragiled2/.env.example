# FNS (Fragile News Source) Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3002
FRONTEND_URL=http://localhost:3000

# Database Configuration (SQLite for testing)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=fns_database

# Keisha AI Integration
KEISHA_API_URL=http://localhost:3001
KEISHA_API_KEY=your_keisha_api_key

# soWSnewsletter Integration
SOWS_NEWSLETTER_URL=https://sowsnewsletter.onrender.com
LOCAL_NEWS_PATH=../news_project

# News Import Configuration
IMPORT_FREQUENCY_HOURS=12
MAX_ARTICLES_PER_IMPORT=100
ANALYSIS_BATCH_SIZE=10
IMAGE_EXTRACTION_ENABLED=true
AUTO_ANALYSIS_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your_jwt_secret_key_here
BCRYPT_ROUNDS=12

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/fns.log

# External APIs
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account.json

# Matrix Theme Assets
MATRIX_VIDEO_URL=/static/matrix.mp4
FNS_LOGO_URL=/static/fns-logo.png

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@fragilenews.com

# Social Media Integration (Optional)
TWITTER_API_KEY=
TWITTER_API_SECRET=
FACEBOOK_APP_ID=

# Monitoring
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Development Tools
DEBUG=fns:*
MOCK_KEISHA_RESPONSES=false
