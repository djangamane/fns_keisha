# =============================================================================
# KEISHA AI BACKEND - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# All variables marked as REQUIRED must be set for the application to function
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Port for the server to listen on
PORT=3001

# Environment mode (development, production, test)
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION (SUPABASE) - REQUIRED
# =============================================================================
# Your Supabase project URL
# Example: https://your-project-id.supabase.co
SUPABASE_URL=your_supabase_url_here

# Supabase service role key (not anon key!)
# This key has elevated permissions for server-side operations
# Find this in: Supabase Dashboard > Settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# AI SERVICE CONFIGURATION (HUGGING FACE) - REQUIRED
# =============================================================================
# Hugging Face API token for accessing inference API
# Get this from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# The specific model to use for Keisha AI
# Default: DJanga24/keisha-qwen3-lora (do not change unless you know what you're doing)
HUGGINGFACE_MODEL=DJanga24/keisha-qwen3-lora

# =============================================================================
# PAYMENT PROCESSING (COINBASE COMMERCE) - OPTIONAL
# =============================================================================
# Coinbase Commerce API key for payment processing
# Get this from: https://commerce.coinbase.com/dashboard/settings
COINBASE_COMMERCE_API_KEY=your_coinbase_commerce_api_key_here

# Webhook secret for verifying Coinbase webhook signatures
# Set this in: Coinbase Commerce Dashboard > Settings > Webhook endpoints
COINBASE_WEBHOOK_SECRET=your_coinbase_webhook_secret_here

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# URL of your frontend application (for redirects and CORS)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# 32-character encryption key for message privacy - REQUIRED
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
# IMPORTANT: Keep this secret and never share it!
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Allowed CORS origins (comma-separated)
# Add your production domain here
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate limiting configuration
# Window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window per IP
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path (relative to project root)
LOG_FILE=logs/app.log

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATION (OPTIONAL)
# =============================================================================
# Set to true to enable additional debug logging
DEBUG_MODE=false

# Set to true to disable authentication for testing (NEVER use in production!)
DISABLE_AUTH=false

# =============================================================================
# PRODUCTION CONFIGURATION NOTES
# =============================================================================
# When deploying to production, make sure to:
# 1. Set NODE_ENV=production
# 2. Use strong, unique values for all secrets
# 3. Set CORS_ORIGINS to your actual domain
# 4. Use HTTPS URLs for FRONTEND_URL
# 5. Keep your .env file secure and never commit it to version control
# 6. Consider using environment-specific configuration management
# =============================================================================